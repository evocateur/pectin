    "eslint-plugin-zillow": "^3.3.2",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.1",
    "p-map": "^3.0.0",
    "prettier": "^1.18.2",
    "prettier-config-zillow": "^1.1.1",
    "rollup": "^1.19.3",
    "tacks": "^1.3.0",
    "tempy": "^0.3.0",
    "touch": "^3.1.0"
